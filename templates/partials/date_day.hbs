 <script>
      
        const getCurrentDay=()=>{
        let weekday= new Array(7);
        weekday[0]="Sunday";
        weekday[1]="Monday";
        weekday[2]="Tueday";
        weekday[3]="Wednesday";
        weekday[4]="Thursday";
        weekday[5]="Friday";
        weekday[6]="Saturday";
        let currentTime= new Date();

        days = weekday[currentTime.getDay()];
        let day=document.getElementById('day');
        day.innerText= days;

        };

        getCurrentDay();


  function startDate() {
    var d = new Date();
   
    var months = ["January","February","March","April","May","June","July","August","September","October","November","December"];
    document.getElementById("today_date").innerHTML = d.getDate()+" , "+months[d.getMonth()];
  }
startDate();
        
    </script>